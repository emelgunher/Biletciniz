<body class="animsition">

    <!-- Header -->
    <header>
        <!-- Header desktop -->
        <div class="container-menu-desktop">
            <div class="topbar">
                <div class="content-topbar container h-100">
                    <div class="left-topbar-item main-menu-m">

                        <partial name="_LoginPartial" />
                       
                    </div>


                    <div class="right-topbar">
                        <a href="#">
                            <span class="fab fa-facebook-f"></span>
                        </a>

                        <a href="#">
                            <span class="fab fa-twitter"></span>
                        </a>

                        <a href="#">
                            <span class="fab fa-pinterest-p"></span>
                        </a>

                        <a href="#">
                            <span class="fab fa-vimeo-v"></span>
                        </a>

                        <a href="#">
                            <span class="fab fa-youtube"></span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="wrap-header-mobile">
                <!-- Logo moblie -->

                <div class="logo-mobile">
                    <a asp-page="/Kullanıcı/Anasayfa/Index">
                        <img src="/images/icons/aaa.png" />
                    </a>
                </div>

                <!-- Button show menu -->
                <div class="btn-show-menu-mobile hamburger hamburger--squeeze m-r--8">
                    <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                    </span>
                </div>
            </div>

            <!-- Menu Mobile -->
            <div class="menu-mobile">

                <ul class="main-menu-m" style="background-color:black">
                    <li style="background-color:black">
                        <a asp-page="/Kullanıcı/Anasayfa/Index">Anasayfa</a>

                    </li>

                    <li style="background-color:black">
                        <a asp-page="/Kullanıcı/Muzik/Index">Müzik</a>
                        <ul class="sub-menu-m">
                            <li><a asp-page="/Kullanıcı/Muzik/Pop">Pop</a></li>
                            <li><a href="home-02.html">Rock</a></li>
                            <li><a href="home-03.html">Caz</a></li>
                            <li><a href="home-03.html">Klasik</a></li>
                            <li><a href="home-03.html">Rap</a></li>
                        </ul>
                        <span class="arrow-main-menu-m">
                            <i class="fa fa-angle-right" aria-hidden="true"></i>
                        </span>
                    </li>

                    <li style="background-color:black">
                        <a asp-page="/Kullanıcı/Spor/Index">Spor </a>
                        <ul class="sub-menu-m">
                            <li><a asp-page="/Kullanıcı/Spor/Futbol">Futbol</a></li>
                            <li><a href="home-02.html">Basketbol</a></li>
                            <li><a href="home-03.html">Voleybol</a></li>
                            <li><a href="home-03.html">Tenis</a></li>

                        </ul>
                        <span class="arrow-main-menu-m">
                            <i class="fa fa-angle-right" aria-hidden="true"></i>
                        </span>
                    </li>

                    <li style="background-color:black">
                        <a asp-page="/Kullanıcı/Aile/Index">Aile</a>
                        <ul class="sub-menu-m">
                            <li><a asp-page="/Kullanıcı/Aile/Gosteri">Gösteri</a></li>
                            <li><a href="home-02.html">Sirk</a></li>
                            <li><a href="home-03.html">Tiyatro</a></li>

                        </ul>
                        <span class="arrow-main-menu-m">
                            <i class="fa fa-angle-right" aria-hidden="true"></i>
                        </span>
                    </li>

                    <li style="background-color:black">
                        <a asp-page="/Kullanıcı/Iletisim/Index">İletişim</a>
                    </li>

                    <li>
                        @if (User.IsInRole("Admin"))
                        {
                            <div style="background-color:black">
                                <a href="#">Admin</a>
                                <ul class="sub-menu-m">
                                    <li><a asp-page="/Admin/Bilet/Index">Bilet</a></li>
                                    <li><a asp-page="/Admin/Etkinlik/Index">Etkinlik</a></li>
                                    <li><a asp-page="/Admin/Sanatci/Index">Sanatçı</a></li>
                                    <li><a asp-page="/Admin/Mekan/Index">Mekan</a></li>

                                </ul>
                                <span class="arrow-main-menu-m">
                                    <i class="fa fa-angle-right" aria-hidden="true"></i>
                                </span>
                            </div>
                        }
                    </li>


                </ul>
            </div>

            <div class="wrap-logo container">
                <!-- Logo desktop -->
                <div class="logo">
                    <a asp-page="/Kullanıcı/Anasayfa/Index">
                        <img src="/images/icons/aaa.png" />
                    </a>
                </div>


                <div class="pos-relative size-a-2 bo-1-rad-22 of-hidden bocl11 m-tb-6">
                    <input class="f1-s-1 cl6 plh9 s-full p-l-25 p-r-45" type="text" name="search" placeholder="Search">
                    <button class="flex-c-c size-a-1 ab-t-r fs-20 cl2 hov-cl10 trans-03">
                        <i class="zmdi zmdi-search"></i>
                    </button>
                </div>

            </div>



            <!--  -->
            <div class="wrap-main-nav">
                <div class="main-nav">
                    <!-- Menu desktop -->
                    <nav class="menu-desktop">
                        <a class="logo-stick" asp-page="/Kullanıcı/Anasayfa/Index">
                            <img src="images/icons/aaa.png" alt="LOGO">
                        </a>

                        <ul class="main-menu">
                            <li class="main-menu-active">
                                <a asp-page="/Kullanıcı/Anasayfa/Index">Anasayfa</a>
                            </li>

                            <li class="menu-item">
                                <a asp-page="/Kullanıcı/Muzik/Index">Müzik</a>

                                <div class="sub-mega-menu">
                                    <div class="nav flex-column nav-pills" role="tablist" style="background-color:white">
                                        <a class="nav-link active"  asp-page="/Kullanıcı/Muzik/Pop" role="tab">Pop</a>
                                        <a class="nav-link"  asp-page="/Kullanıcı/Muzik/Rock" role="tab">Rock</a>
                                        <a class="nav-link"  asp-page="/Kullanıcı/Muzik/Caz" role="tab">Caz</a>
                                        <a class="nav-link"  asp-page="/Kullanıcı/Muzik/Klasik" role="tab">Klasik</a>
                                        <a class="nav-link"  asp-page="/Kullanıcı/Muzik/Rap" role="tab">Rap</a>

                                    </div>

                                </div>
                            </li>


                            <li class="menu-item">
                                <a asp-page="/Kullanıcı/Spor/Index">Spor</a>

                                <div class="sub-mega-menu">
                                    <div class="nav flex-column nav-pills" role="tablist" style="background-color:white">
                                        <a class="nav-link active" asp-page="/Kullanıcı/Spor/Futbol" role="tab">Futbol</a>
                                        <a class="nav-link" data-toggle="pill" href="#news-1" role="tab">Basketbol</a>
                                        <a class="nav-link" data-toggle="pill" href="#news-2" role="tab">Voleybol</a>
                                        <a class="nav-link" data-toggle="pill" href="#news-3" role="tab">Tenis</a>

                                    </div>

                                </div>
                            </li>

                            <li class="menu-item">
                                <a asp-page="/Kullanıcı/Aile/Index">Aile</a>

                                <div class="sub-mega-menu">
                                    <div class="nav flex-column nav-pills" role="tablist" style="background-color:white">
                                        <a class="nav-link active" asp-page="/Kullanıcı/Aile/Gosteri" role="tab">Gösteri</a>
                                        <a class="nav-link" data-toggle="pill" href="#news-1" role="tab">Sirk</a>
                                        <a class="nav-link" data-toggle="pill" href="#news-2" role="tab">Tiyatro</a>

                                    </div>

                                </div>
                            </li>

                            <li class="menu-item">
                                <a asp-page="/Kullanıcı/Iletisim/Index">İletişim</a>

                            </li>


                            <li class="menu-item">
                                @*@if (User.IsInRole("Admin"))
                                {*@
                                    <a href="#">Admin</a>

                                    <div class="sub-mega-menu">
                                        <div class="nav flex-column nav-pills" role="tablist" style="background-color:white">
                                            <a class="nav-link" asp-page="/Admin/Bilet/Index">Bilet</a>
                                            <a class="nav-link" asp-page="/Admin/Etkinlik/Index">Etkinlik</a>
                                            <a class="nav-link" asp-page="/Admin/Sanatci/Index">Sanatci </a>
                                            <a class="nav-link" asp-page="/Admin/Mekan/Index">Mekan</a>

                                        </div>

                                    </div>
                                    @*}*@
                                </li>

                        </ul>

                    </nav>
                </div>
            </div>

@page
@model Biletciniz.Pages.Admin.Etkinlik.IndexModel

@{
    ViewData["Title"] = "Index";
}


<div class="row" style="margin-top:15px;margin-bottom:15px">
    <div class="col-md-10">

    </div>
    <div class="col-md-2">

        <p>
            <a class="btn btn-danger" asp-page="Create">Etkinlik Oluştur</a>
        </p>

    </div>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Etkinlik[0].EtkinlikAdi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Etkinlik[0].Tarih)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Etkinlik[0].Afis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Etkinlik[0].Süre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Etkinlik[0].Kategori)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Etkinlik[0].Tur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Etkinlik[0].Mekan)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Etkinlik)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EtkinlikAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tarih)
                </td>
                <td>
                    <img src="@item.Afis" style="width:75px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Süre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kategori.KategoriAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tur.TurAdi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mekan.MekanAdi)
                </td>
                <td>
                    <div class="row">
                        <div class="col-4 "> <a class="btn btn-danger pr-1" asp-page="./Edit" asp-route-id="@item.ID">Düzenle</a> </div>
                        <div class="col-4 "><a class="btn btn-info pr-3" asp-page="./Details" asp-route-id="@item.ID">Detay</a></div>
                        <div class="col   "><a class="btn btn-secondary pr-4" asp-page="./Delete" asp-route-id="@item.ID">Sil</a></div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

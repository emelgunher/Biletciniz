@page
@model Biletciniz.Pages.Kullanıcı.Iletisim.IndexModel
@{
    ViewData["Title"] = "Index";
}

<!-- Page Content -->
<div class="container">


    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a asp-page="/Kullanıcı/Anasayfa/Index"> Anasayfa</a>
        </li>
        <li class="breadcrumb-item active">İletişim</li>
    </ol>

    <!-- Content Row -->
    <div class="row">
        <!-- Map Column -->
        <div class="col-lg-8 mb-4">
            <!-- Embedded Google Map -->
            <iframe src="https://www.google.com/maps/d/embed?mid=1g3aXp_rzZnyA0UnkkhSCP5fz5QA" width="640" height="480"></iframe>
        </div>
        <!-- Contact Details Column -->
        <div class="col-lg-4 mb-4">
            <h3>İletişim Bilgileri</h3>
            <p>
                Kemalpaşa Mahallesi, 173.Sokak
                <br>Sabiha Rezidans, Serdivan / Sakarya
                <br>
            </p>
            <p>
                <abbr title="Telefon"></abbr> +90(543)4830661
            </p>
            <p>
                <abbr title="E-mail"></abbr>
                <a href="mailto:name@example.com">
                    emelgunher@gmail.com
                </a>
            </p>

        </div>
    </div>
    <!-- /.row -->
    <!-- Contact Form -->
    <!-- In order to set the email address and subject line for the contact form go to the bin/contact_me.php file. -->
    <div class="row">
        <div class="col-lg-8 mb-4">
            <h3>Öneri ve Şikayetleriniz İçin</h3>
            <form name="sentMessage" id="contactForm" novalidate>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Ad-Soyad:</label>
                        <input type="text" class="form-control" id="name" required data-validation-required-message="Lütfen adınızı giriniz.">
                        <p class="help-block"></p>
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Telefon:</label>
                        <input type="tel" class="form-control" id="phone" required data-validation-required-message="Lütfen telefon numaranızı giriiniz.">
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>E-Mail:</label>
                        <input type="email" class="form-control" id="email" required data-validation-required-message="Lütfen e-mail giriniz.">
                    </div>
                </div>
                <div class="control-group form-group">
                    <div class="controls">
                        <label>Yorum:</label>
                        <textarea rows="10" cols="100" class="form-control" id="message" required data-validation-required-message="Lütfen mesajınızı yazınız." maxlength="999" style="resize:none"></textarea>
                    </div>
                </div>
                <div id="success"></div>
                <!-- For success/fail messages -->
                <button type="submit" class="btn btn-primary" id="sendMessageButton">Gönder</button>
            </form>
        </div>

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
